---
/** Funnel logic */
const ctaHref = "/card/yysng/";
const ctaLabel = "Get in touch";
---

<header class="sticky top-0 z-50">
  <!-- glass bar -->
  <div class="backdrop-blur-md bg-[color:var(--bg)]/80 border-b border-[color:var(--border)]">
    <div class="container h-16 flex items-center justify-between">
      <!-- Text logo (Sora) -->
      <a
        href="/"
        class="flex items-center no-underline hover:no-underline"
        style="font-family: var(--font-headline);"
        aria-label="yysng home"
      >
        <span class="text-[color:var(--ink)] text-[15px] md:text-[16px] font-semibold tracking-[-0.02em]">
          yysng
        </span>

        {/* optional: subtle accent mark (remove if you want pure text) */}
        <span
          aria-hidden="true"
          class="ml-1 inline-block h-1.5 w-1.5 rounded-full bg-[color:var(--accent)] translate-y-[1px]"
        ></span>
      </a>

      <!-- CTA (primary) -->
      <a
        href={ctaHref}
        class="inline-flex items-center justify-center rounded-[var(--radius-md)]
               px-4 py-2 text-sm font-semibold
               bg-[color:var(--accent)] text-white
               shadow-[var(--shadow-sm)]
               hover:opacity-90 transition
               no-underline hover:no-underline"
      >
        {ctaLabel}
      </a>
    </div>
  </div>
</header>