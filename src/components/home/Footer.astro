const { cta } = Astro.props;

const logoSrc = "https://ezycoaching.com/wp-content/uploads/2025/03/cropped-ezycoaching-V2.png";
---

<footer class="bg-[#111] text-white">
  <div class="max-w-6xl mx-auto px-6 py-14 grid md:grid-cols-3 gap-10">
    <div>
      <img src={logoSrc} alt="EzyCoaching" class="h-14 w-auto" loading="lazy" />
      <p class="mt-4 text-sm text-white/80">Unlimited Coaching for Lasting Growth.</p>

      <div class="mt-6 flex gap-4 text-sm">
        <a class="underline text-white/80 hover:text-white" href="https://www.linkedin.com/company/ezycoaching/" target="_blank">LinkedIn</a>
        <a class="underline text-white/80 hover:text-white" href="https://www.instagram.com/ezycoaching/" target="_blank">Instagram</a>
        <a class="underline text-white/80 hover:text-white" href="https://www.tiktok.com/@ezycoaching" target="_blank">TikTok</a>
      </div>
    </div>

    <div>
      <h6 class="font-bold">Useful Links</h6>
      <ul class="mt-4 space-y-2 text-sm text-white/80">
        <li><a class="hover:text-white" href="/empowering-leaders-transforming-teams/">Who We Are</a></li>
        <li><a class="hover:text-white" href="/unlimited-coaching-for-leaders-and-teams/">How We Support</a></li>
        <li><a class="hover:text-white" href="/meet-our-icf-credential-coaches/">Our Coaches</a></li>
        <li><a class="hover:text-white" href="/contact-us/">{cta?.button?.label || "Contact Us"}</a></li>
