---
const { data } = Astro.props;

const bgUrl =
  "https://ezycoaching.com/wp-content/uploads/2025/08/homepage-hero-4.png";
---

<section
  class="w-full bg-no-repeat bg-cover bg-center"
  style={`background-image:url(${bgUrl});`}
>
  <div class="bg-[rgba(250,243,236,0.85)]">
    <div class="max-w-6xl mx-auto px-6 py-16 md:py-24">
      <div class="grid grid-cols-1 md:grid-cols-5 gap-10 items-center">
        <div class="md:col-span-3">
          <h1 class="font-medium leading-[1.15] text-[44px] md:text-[71px] text-[color:var(--primary)]">
            {data.title}
          </h1>

          <p class="mt-5 text-[18px] leading-relaxed text-[color:var(--muted)] max-w-2xl">
            {data.subtitle}
          </p>

          <a
            href={data.cta?.href}
            class="btn-primary mt-8 inline-flex items-center text-[16px]"
          >
            {data.cta?.label}
          </a>
        </div>

        <div class="md:col-span-2"></div>
      </div>
    </div>
  </div>
</section>