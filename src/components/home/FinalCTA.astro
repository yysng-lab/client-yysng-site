---
const { data } = Astro.props;

const kicker =
  data.kicker ?? "READY TO TRANSFORM YOUR SALES PERFORMANCE?";
---

<section class="py-24 md:py-28">
  <div class="container">
    <!-- Notion-style readable column (left aligned) -->
    <div class="text-col">
      <p
        data-reveal-item
        class="text-[11px] tracking-[0.22em] uppercase font-semibold text-[color:var(--accent)]"
      >
        {kicker}
      </p>

      <h2
        data-reveal-item
        class="mt-4 text-balance text-[color:var(--primary)]"
      >
        {data.heading}
      </h2>

      {data.description && (
        <p class="mt-6 text-[18px] leading-relaxed text-[color:var(--muted)]">
          {data.description}
        </p>
      )}

      <div class="mt-10">
        <a
          href={data.button?.href}
          class="btn-primary inline-flex items-center gap-2"
        >
          <span>{data.button?.label}</span>
          <span aria-hidden="true" class="text-lg leading-none">â€º</span>
        </a>
      </div>
    </div>
  </div>
</section>