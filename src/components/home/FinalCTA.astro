---
const { data } = Astro.props;

// robust newline renderer
const renderText = (v = "") =>
  String(v)
    .replace(/\\n/g, "\n")
    .replace(/\r\n/g, "\n")
    .replace(/\n/g, "<br />");
---

<section class="py-28 md:py-36">
  <div class="container">
    <div class="max-w-3xl">

      <h2
        data-reveal-item
        class="text-balance text-[color:var(--ink)]"
        set:html={renderText(data.heading)}
      ></h2>

      {data.description && (
        <p
          class="mt-12 text-[18px] leading-relaxed text-[color:var(--muted)] max-w-[64ch]"
          set:html={renderText(data.description)}
        ></p>
      )}

      {data.button?.href && data.button?.label && (
        <div class="mt-14">
          <a
            href={data.button.href}
            class="btn-primary no-underline hover:no-underline"
          >
            {data.button.label}
          </a>
        </div>
      )}

    </div>
  </div>
</section>