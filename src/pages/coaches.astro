---
export const prerender = false;

import Base from "../layouts/Base.astro";

/**
 * Coaches (ordered for “confidence + clarity” flow)
 * Requirement: YY must be #10 ✅
 */
const coaches = [
  {
    name: "Serene Pek",
    img: "/images/coaches/serene.png",
    title: "Former banking leader • ICF PCC",
    desc: "Holds leaders steady when confidence wavers under sustained performance pressure. Calm, grounded coaching for sales leaders who need clarity under load.",
  },
  {
    name: "Hooi Chin Chow",
    img: "/images/coaches/hooi-chin.png",
    title: "Former Sales Director • Regional team leader",
    desc: "Helps leaders slow down thinking when results demand faster decisions. Brings structure and perspective when speed starts to blur judgment.",
  },
  {
    name: "Atul Shah",
    img: "/images/coaches/atul.png",
    title: "Senior sales & operations leader",
    desc: "Brings structure when leaders face scale, systems, and people strain. Helps you think clearly when growth introduces friction you can’t outwork.",
  },
  {
    name: "Colin Lee",
    img: "/images/coaches/colin.png",
    title: "Corporate leader & entrepreneur • ICF MCC",
    desc: "Holds clarity when leaders carry vision without alignment below. Supports decisive leadership when direction is clear but execution is not.",
  },
  {
    name: "Fred Then",
    img: "/images/coaches/fred.png",
    title: "Serial entrepreneur • SME coach",
    desc: "Helps founders regain direction when complexity multiplies too quickly. Cuts through noise and re-centers decisions on what matters next.",
  },
  {
    name: "Dr. Jennifer Lim",
    img: "/images/coaches/jennifer.png",
    title: "ICF PCC • Resilience & self-leadership",
    desc: "Supports leaders navigating emotional pressure that clouds decision-making. Helps restore steadiness, clarity, and follow-through under stress.",
  },
  {
    name: "Edwina Woo",
    img: "/images/coaches/edwina-woo.png",
    title: "ICF PCC • Enneagram practitioner",
    desc: "Helps leaders notice patterns they’ve normalised but outgrown. Builds clarity through self-awareness when old instincts stop working.",
  },
  {
    name: "Ryan Chew",
    img: "/images/coaches/ryan.png",
    title: "Former military leader • Leadership coach",
    desc: "Grounds leaders when discipline and empathy need to coexist. Brings steadiness when leadership demands are high and signals are mixed.",
  },
  {
    name: "Adrian Song",
    img: "/images/coaches/adrian.png",
    title: "Associate Certified Coach • Cross-industry leader",
    desc: "Supports leaders through uncertainty when change feels personal. Helps you regain clarity when the next move is not obvious.",
  },
  {
    name: "Yan Yuan Sng (YY)",
    img: "/images/coaches/yy.png",
    title: "Growth operator • Board advisor • Strategy",
    desc: "Works with leaders when effort is high but progress feels unclear. Brings operator thinking to decisions that affect momentum, teams, and outcomes.",
  },
];

// SEO
const title = "Leadership Coaches Who Support Real Decisions | EzyCoaching";
const description =
  "Meet EzyCoaching’s leadership coaches — experienced operators and certified coaches matched to support leaders when pressure and decisions are real.";
const canonical = "https://ezycoaching.com/coaches/";
---

<Base title={title} description={description}>
  <Fragment slot="head">
  <link rel="canonical" href={canonical} />

  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />

  {/* JSON-LD: Organization + CollectionPage + Person (per coach) */}
  <script
    type="application/ld+json"
    set:html={JSON.stringify(
      [
        {
          "@context": "https://schema.org",
          "@type": "Organization",
          name: "EzyCoaching",
          url: "https://ezycoaching.com/",
          email: "breakthrough@ezycoaching.com",
          address: {
            "@type": "PostalAddress",
            streetAddress: "60 Paya Lebar Road, #06-28, Paya Lebar Square",
            addressLocality: "Singapore",
            postalCode: "409051",
            addressCountry: "SG",
          },
        },
        {
          "@context": "https://schema.org",
          "@type": "CollectionPage",
          name: "Leadership Coaches | EzyCoaching",
          url: canonical,
          description:
            "Meet EzyCoaching’s leadership coaches — experienced operators and certified coaches matched to support leaders when pressure and decisions are real.",
          inLanguage: "en",
        },
        ...coaches.map((c) => ({
          "@context": "https://schema.org",
          "@type": "Person",
          name: c.name.replace(/\s*\(YY\)\s*/g, "").trim(),
          jobTitle: c.title,
          affiliation: {
            "@type": "Organization",
            name: "EzyCoaching",
          },
          description: c.desc,
          url: canonical,
        })),
      ],
      null,
      2
    )}
  />
</Fragment>

  <main>
    <!-- SECTION 1 — PAGE ENTRY -->
    <section class="section">
      <div class="container">
        <div class="text-col">
          <h1 data-reveal-item class="text-[color:var(--primary)] text-balance">
            The People You Think With When It Matters
          </h1>

          <p class="mt-6 text-[18px] leading-relaxed text-[color:var(--muted)]">
            When pressure rises, clarity doesn’t come from advice.<br />
            It comes from the right conversation.
          </p>
        </div>
      </div>
    </section>

    <!-- SECTION 2 — EXPECTATION SETTING -->
    <section class="section">
      <div class="container">
        <div class="text-col">
          <p
            data-reveal-item
            class="text-[11px] tracking-[0.22em] uppercase font-semibold text-[color:var(--accent)]"
          >
            The bench
          </p>

          <h2 data-reveal-item class="mt-4 text-[color:var(--primary)] text-balance">
            Not one coach. Not random matches.
          </h2>

          <p class="mt-6 text-[18px] leading-relaxed text-[color:var(--muted)]">
            You’re supported by a curated bench of coaches who have led teams, carried targets,
            and made decisions with real consequences.
          </p>

          <p class="mt-4 text-[18px] leading-relaxed text-[color:var(--muted)]">
            We don’t rotate you through styles. We match you to someone who can hold your context.
          </p>
        </div>
      </div>
    </section>

        <!-- SECTION 3 — COACH CARDS -->
    <section class="section">
      <div class="container">
        <div class="text-col">
          <p
            data-reveal-item
            class="text-[11px] tracking-[0.22em] uppercase font-semibold text-[color:var(--accent)]"
          >
            Our coaches
          </p>

          <h2 data-reveal-item class="mt-4 text-[color:var(--primary)] text-balance">
            Each coach is here to help you think clearly when the pressure is real.
          </h2>
        </div>

        <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {coaches.map((c) => (
            <article class="coach-card">
              <div class="flex items-start gap-5">
                <img
                  src={c.img}
                  alt={c.name}
                  class="coach-img"
                  loading="lazy"
                  decoding="async"
                />

                <div class="min-w-0">
                  <p class="font-semibold text-[color:var(--text)] leading-snug">
                    {c.name}
                  </p>
                  <p class="mt-1 text-sm text-[color:var(--muted)] leading-relaxed">
                    {c.title}
                  </p>
                </div>
              </div>

              <p class="mt-5 text-[15px] leading-relaxed text-[color:var(--muted)]">
                {c.desc}
              </p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- SECTION 4 — MATCHING -->
    <section class="section">
      <div class="container">
        <div class="text-col">
          <p
            data-reveal-item
            class="text-[11px] tracking-[0.22em] uppercase font-semibold text-[color:var(--accent)]"
          >
            Matching
          </p>

          <h2 data-reveal-item class="mt-4 text-[color:var(--primary)] text-balance">
            How we match you
          </h2>

          <p class="mt-6 text-[18px] leading-relaxed text-[color:var(--muted)]">
            You don’t pick from a directory.<br />
            You tell us what you’re dealing with.<br />
            We pair you with the coach who fits the moment.
          </p>
        </div>
      </div>
    </section>

    <!-- SECTION 5 — CREDIBILITY (QUIET) -->
    <section class="section">
      <div class="container">
        <div class="text-col">
          <p
            data-reveal-item
            class="text-[11px] tracking-[0.22em] uppercase font-semibold text-[color:var(--accent)]"
          >
            Standards
          </p>

          <h2 data-reveal-item class="mt-4 text-[color:var(--primary)] text-balance">
            Experienced. Credentialed. Accountable.
          </h2>

          <p class="mt-6 text-[18px] leading-relaxed text-[color:var(--muted)]">
            All coaches meet recognised professional standards and operate under strict confidentiality.
          </p>

          <p class="mt-4 text-[18px] leading-relaxed text-[color:var(--muted)]">
            More importantly, they’ve sat on the other side of the table.
          </p>
        </div>
      </div>
    </section>

    <!-- SECTION 6 — CLEAN ENDING -->
    <section class="section">
      <div class="container">
        <div class="text-col pt-8 border-t border-[color:var(--border)]">
          <h2 data-reveal-item class="text-[color:var(--primary)] text-balance">
            When the problem shows up, you’re not alone.
          </h2>

          <p class="mt-6 text-[18px] leading-relaxed text-[color:var(--muted)]">
            Clarity doesn’t arrive on schedule.<br />
            Support shouldn’t either.
          </p>

          <p class="mt-6 text-[18px] leading-relaxed">
            <a
              href="/contact/"
              class="font-semibold text-[color:var(--primary)] no-underline hover:no-underline"
            >
              Talk to us →
            </a>
          </p>
        </div>
      </div>
    </section>
  </main>

    <style>
    /* Minimal additions: card + hover. Uses your existing tokens. */
    .coach-card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius-lg);
      padding: 1.25rem 1.25rem 1.35rem;
      transition: transform 160ms ease, box-shadow 160ms ease, border-color 160ms ease;
    }
    .coach-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
      border-color: rgba(24, 73, 121, 0.18);
    }

    .coach-img {
      height: 92px;
      width: 92px;
      border-radius: 9999px;
      object-fit: cover;
      flex: 0 0 auto;
      box-shadow: var(--shadow-sm);
    }

    @media (min-width: 768px) {
      .coach-img {
        height: 104px;
        width: 104px;
      }
    }
  </style>
</Base>