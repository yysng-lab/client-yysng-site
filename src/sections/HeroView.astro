---
const { data } = Astro.props;
---

<section class="py-24 text-center bg-white">
  <div class="max-w-3xl mx-auto px-6">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">
      {data?.title ?? "Your headline goes here"}
    </h1>

    <p class="mt-4 text-lg text-gray-600">
      {data?.subtitle ?? "Your supporting message goes here"}
    </p>

    {data?.cta && (
      <a
        href={data.cta.href}
        class="inline-block mt-8 rounded-lg bg-black px-6 py-3 text-white hover:bg-gray-800 transition"
      >
        {data.cta.label}
      </a>
    )}
  </div>
</section>