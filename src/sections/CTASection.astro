---
const { data } = Astro.props;
---

<section class="p-6 border rounded-xl">
  <h2 class="text-2xl font-semibold mb-2">{data.heading}</h2>
  <p class="mb-4">{data.description}</p>
  <a href={data.button.href} class="inline-block px-4 py-2 bg-black text-white rounded">
    {data.button.label}
  </a>
</section>